<wxs module="filter">
  var toFixedFn = function (price) {
    return Number(price).toFixed(2)
  }
  module.exports = {
    toFixedFn: toFixedFn
  };
</wxs>
<view class="costcontainer">
  <view class="img">
    <image class="imgsize" mode="aspectFill" src="/assets/images/cost.png"></image>
  </view>
  <view class="text">运费估算</view>
  <view class="flex_a_c costbox">
    <view class="right">
      <view>装运渠道</view>
      <view>{{channel}}</view>
    </view>
    <view class="left">
      <view>装运渠道</view>
      <view>{{channel}}</view>
    </view>
  </view>
  <view class="volumebox">
    <view>预估体积</view>
    <view>
      <input bindblur="getinpVal" class="boxsize" placeholder="请输入长宽高" type="text" />
    </view>
  </view>
  <view class="estimatebox">
    <view>预估运费（实际结果以订单为准</view>
    <view>￥{{filter.toFixedFn(freightprice)}}</view>
  </view>
</view>